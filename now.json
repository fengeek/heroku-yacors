{
        "version": 2,
        "builds": [
                {
                        "src": "index.js",
                        "use": "@now/node",
                        "config": {
                                "includeFiles": [
                                        "*.js",
                                        "*.json"
                                ]
                        }
                }
        ],
        "routes": [
                {
                        "src": "/(.*)",
                        "dest": "/index.js"
                }
        ]
}